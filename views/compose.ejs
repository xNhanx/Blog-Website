<%- include("partials/header") -%>

<h1> Compose </h1>
<form action="/compose" method="POST">
    <div class="form-group">
        <label for="composeTitleInput"> Title </label>
        <input type="text" class="form-control" id="composeTitleInput" name="titleBody" autocomplete="off">
    </div>
    <div class="form-group">
        <label for="composePostInput"> Post </label>
        <textarea type="text" class="form-control" id="composePostInput" name="postBody" rows="5" autocomplete="off"></textarea>
    </div>
    <button type="submit" class="btn btn-primary publish-button" name="composeText" value="composeText"> Publish </button>
</form>

<%- include("partials/footer") -%>